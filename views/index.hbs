<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, height=device-height"/>
        <link rel="stylesheet" type="text/css" href="styles.css"/>
        <title>Torneo Uruguayo</title>
        
    </head>
<body>
    <header class="header">
        <h1>Torneo Uruguayo - Clausura 1A 2020</h1>       
    </header>
                <table class="tournament-table">
                    <tr>
                        <th>Nombre</th>
                        <th>PTS</th>
                        <th class="hide_very_small">PJ</th>
                        <th class="hide_very_small">PG</th>
                        <th class="hide_very_small">PP</th>
                        <th class="hide_very_small">PE</th>
                        <th class="hide_on_mobile">GF</th>
                        <th class="hide_on_mobile">GC</th>
                        <th class="hide_on_mobile">DIF</th>
                        </tr>   
                        {{#each Team}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{pts}}</td>
                                <td class="hide_very_small">{{pj}}</td>
                                <td class="hide_very_small">{{pg}}</td>
                                <td class="hide_very_small">{{pe}}</td>
                                <td class="hide_very_small">{{pp}}</td>
                                <td class="hide_on_mobile">{{gf}}</td>
                                <td class="hide_on_mobile">{{gc}}</td>
                                <td class="hide_on_mobile">{{dif}}</td>
                            </tr>
                        {{/each}}
                </table>   
</body>
</html>